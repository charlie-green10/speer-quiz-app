<div class="card dash">
    <div class="card-content">
        <h4>{{name}}</h4>
        <p class="grey-date">Joined: {{formatDate date 'MMMM do, YYYY'}}</p>
        <div class="divider"></div>
        {{#if quizes}}
            <h5>Your Quizzes:</h5>
            <table class="striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Average Score</th>
                        <th>Number of Completions</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each quizes}}
                        <tr>
                            <td>{{title}}</td>
                            <td>{{formatDate createdAt 'MMMM do, YYYY'}}</td>
                            <td>{{status}}</td>
                            <td>{{average}}/{{questions.length}}</td>
                            <td>{{completions}}</td>
                            <td class="td-button"><a href="dash/{{_id}}" class="btn orange">Take Quiz</a></td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
            <a href="/quizes/create" class="btn blue create-quiz">
            Create a Quiz
            </a>
        {{else}}
        <div class="row">
            <div class="col s6">
                <p>You haven't created any quizes! Click below to get started, or check out the explore page to try quizzes made by other users.</p>
            </div>
        </div>
        <a href="/quizes/create" class="btn blue create-quiz">
            Create a Quiz
        </a>
        <a href="explore" class="btn green create-quiz">
            Explore
        </a>
        {{/if}}
        <div class="divider"></div>
        {{#if results}}
            <h5>Your Quiz Results:</h5>
            <table class="striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Date of completion</th>
                        <th>Status</th>
                        <th>Your Score</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each results}}
                        <tr>
                            <td>{{quizId.title}}</td>
                            <td>{{formatDate timeOfCompletion 'MMMM do, YYYY'}}</td>
                            <td>{{quizId.status}}</td>
                            <td>{{score}}/{{quizId.questions.length}}</td>
                            <td><a href="/dash/result/{{_id}}" class="btn orange">View Results</a></td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
            
        {{else}}
        <div class="row">
            <div class="col s6">
                <p>The results from any quizzes that you take will appear here, check out the explore page to get started!</p>
            </div>
        </div>
        
        {{/if}}

    </div>
</div>

