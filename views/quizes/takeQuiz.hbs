<div class="card">
    <div class="card-content">
        <h4>{{title}}</h4>
        <div class="row">
            <form action='/explore/results?id={{id}}' method="POST" class="col s12">
        <p>Fill in your answers to the questions below</p>
        {{#each questions}}
            <h6>{{formatQuestion questionNum}}</h6>
            <h8>{{question}}</h8>
            <textarea id={{questionNum}} name={{questionNum}} ></textarea>
            <div class="divider"></div>
        {{/each}}
        <p class='invfield'>{{invField}}</p>
                <div class="row">
                    <input type="submit" value="Save and Submit" class="btn green">
                    <a href="/explore/leaveQuiz" class="btn red">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>